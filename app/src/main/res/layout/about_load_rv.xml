<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="108dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="130dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="8dp"
        android:background="@color/wraite_"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="56dp"
        android:layout_height="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="4dp"
        android:src="@color/wraite_"
        app:layout_constraintBottom_toTopOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="128dp"
        android:layout_height="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:background="@color/wraite_"
        app:layout_constraintTop_toBottomOf="@id/iv_star"/>

    <TextView
        android:id="@+id/desc_two"
        android:layout_width="105dp"
        android:layout_height="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_4_"
        android:background="@color/wraite_"
        app:layout_constraintTop_toBottomOf="@id/desc"/>



    <TextView
        android:id="@+id/desc_thee"
        android:layout_width="119dp"
        android:layout_height="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_4_"
        android:background="@color/wraite_"
        app:layout_constraintTop_toBottomOf="@id/desc_two"/>

    <TextView
        android:id="@+id/desc_four"
        android:layout_width="64dp"
        android:layout_height="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_4_"
        android:background="@color/wraite_"
        app:layout_constraintTop_toBottomOf="@id/desc_thee"/>
</androidx.constraintlayout.widget.ConstraintLayout>